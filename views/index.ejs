<!DOCTYPE html>
<html>
<head>
  <title>Crypto Bot Backtester</title>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    table { border-collapse: collapse; width: 100%; }
    th, td { border: 1px solid #ddd; padding: 6px; text-align: center; }
    th { background: #f4f4f4; }
    section.tabs { margin: 12px 0; }
    section.tabs button { margin-right: 10px; padding: 6px 12px; }
  </style>
</head>
<body>
  <h1>Crypto Backtesting Dashboard</h1>

  <form id="settingsForm">
    Starting Balance: <input type="number" id="startBal" value="10000" />
    Leverage: <input type="number" id="leverage" value="1" />
    <button type="submit">Apply</button>
  </form>

  <button id="startBtn">Start</button>
  <button id="resumeBtn">Resume</button>

  <section class="tabs">
    <button id="showSummary">Summary</button>
    <button id="showTrades">Trades</button>
  </section>

  <div id="summaryView">
    <table id="pairsTable">
      <thead>
        <tr>
          <th>Pair</th>
          <th>EMA-ADX-ATR %</th>
          <th>BBands-RSI %</th>
          <th>Donchian %</th>
          <th>MACD-RSI %</th>
          <th>Supertrend-HA %</th>
          <th>Total %</th>
          <th>Final Balance (USD)</th>
        </tr>
      </thead>
      <tbody id="pairsBody"></tbody>
    </table>

    <canvas id="pairChart" width="800" height="400"></canvas>
  </div>

  <div id="tradesView" style="display:none;">
    <h2>Trade Log</h2>
    <table>
      <thead>
        <tr>
          <th>Pair</th><th>Strategy</th><th>Entry</th><th>Exit</th>
          <th>Entry Time</th><th>Exit Time</th>
          <th>P/L (USD)</th><th>P/L (%)</th>
        </tr>
      </thead>
      <tbody id="tradesBody"></tbody>
    </table>
  </div>

  <script src="/client.js"></script>
</body>
</html>
